{
  "name": "licium-webapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "cross-env NODE_ENV=production react-scripts build",
    "test": "react-scripts test --transformIgnorePatterns \"node_modules/(?!react-icons)/\"",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public",
    "cy:open": "cypress open",
    "cy:run": "cypress run"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:cypress/recommended"
    ]
  },
  "resolutions": {
    "styled-components": "^5"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@chakra-ui/core": "^0.8.0",
    "@drizzle/react-plugin": "^1.5.1",
    "@drizzle/store": "^1.5.1",
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "@storybook/addon-actions": "^5.3.19",
    "@storybook/addon-links": "^5.3.19",
    "@storybook/addon-storyshots": "^5.3.19",
    "@storybook/addons": "^5.3.19",
    "@storybook/preset-create-react-app": "^3.1.4",
    "@storybook/react": "^5.3.19",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "cross-env": "^7.0.2",
    "cypress": "^4.11.0",
    "cypress-cucumber-preprocessor": "^2.5.4",
    "emotion-theming": "^10.0.27",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.4",
    "eslint-plugin-cypress": "^2.11.1",
    "http-proxy-middleware": "^1.0.5",
    "husky": "^4.2.5",
    "jest-date-serializer": "^1.0.1",
    "lint-staged": "^10.2.11",
    "magic-sdk": "^2.7.0",
    "msw": "^0.21.2",
    "node-sass": "^4.14.1",
    "overmind": "^25.0.2",
    "overmind-react": "^26.0.2",
    "prettier": "^2.0.5",
    "ramda": "^0.27.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-dropzone": "^11.0.3",
    "react-focus-lock": "^2.4.1",
    "react-icons": "^3.11.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^3.4.3",
    "react-table": "^7.5.0",
    "react-test-renderer": "^16.13.1",
    "styled-components": "^5.2.0",
    "uuid": "^8.3.0",
    "web3": "^1.2.11"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,css}": [
      "prettier --single-quote --no-semi --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "CI=true npm test"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4
  },
  "jest": {
    "snapshotSerializers": [
      "jest-date-serializer"
    ]
  }
}
